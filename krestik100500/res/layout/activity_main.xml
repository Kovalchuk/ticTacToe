<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btnButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="Button 1"
		android:width="90dp"
        android:height="90dp"
        android:layout_toLeftOf="@+id/btnButton2"
    	android:layout_above="@+id/btnButton5"
    	android:onClick="myClick"
    	/>
 
    <Button
        android:id="@+id/btnButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 2"
		android:width="90dp"
        android:height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnButton5"
    	android:onClick="myClick"        
    	/>
 
     <Button
        android:id="@+id/btnButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 3"
        android:layout_toRightOf="@+id/btnButton2"
		android:width="90dp"
        android:height="90dp"
    	android:layout_above="@+id/btnButton5"
    	android:onClick="myClick"
        />
     

      <Button
        android:id="@+id/btnButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 4"        
		android:width="90dp"
        android:height="90dp"
        android:layout_toLeftOf="@+id/btnButton5"
        android:layout_below="@+id/btnButton2"
    	android:onClick="myClick"
        />
     
     <Button
        android:id="@+id/btnButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:width="90dp"
        android:height="90dp"
    	android:onClick="myClick"
        />
     
     <Button
        android:id="@+id/btnButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 6"        
		android:width="90dp"
        android:height="90dp"
        android:layout_toRightOf="@+id/btnButton5"
        android:layout_below="@+id/btnButton2" 
    	android:onClick="myClick"   	
        />
     
     
     <Button
        android:id="@+id/btnButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 8"
        android:layout_centerHorizontal="true"
        android:width="90dp"
        android:height="90dp"
        android:layout_below="@+id/btnButton5"
    	android:onClick="myClick"
        />

     <Button
        android:id="@+id/btnButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 9"
        android:layout_centerHorizontal="true"
        android:width="90dp"
        android:height="90dp"
        android:layout_below="@+id/btnButton5"
        android:layout_toRightOf="@+id/btnButton5"
    	android:onClick="myClick"
        />

     <Button
        android:id="@+id/btnButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 7"
        android:layout_centerHorizontal="true"
        android:width="90dp"
        android:height="90dp"
        android:layout_below="@+id/btnButton5"
        android:layout_toLeftOf="@+id/btnButton5"
    	android:onClick="myClick"
        />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:text="TextView"
         android:visibility="invisible"
          />

     <Button
         android:id="@+id/butRefresh"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:text="Обновить"
         android:onClick="refresh" 
         />

     <LinearLayout
         android:id="@+id/layout1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="18dp"
         android:layout_toRightOf="@+id/butRefresh"
         android:orientation="vertical" >
     </LinearLayout>
     
</RelativeLayout>
